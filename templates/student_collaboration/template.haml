-extends "base.haml"
{% load notifications_tags %} 

-block content
  
		   
  .page-header
    %h1 Student Collaboration - {{ user.username }}

  .container-fluid.boxclasseTitle
    -# TODO [Loan] Refactor avec un for, beaucoup de copier coller pour des comportements redondants
    %ul.nav.nav-pills.center-pills

      {% url 'student_dashboard' as url %}
      %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
        %a.nav-link{href: "{% url 'student_dashboard' %}"} Retour
      {% url 'collaborative_home' as url %}
      %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
        %a.nav-link{href: "{% url 'collaborative_home' %}"} Accueil
      {% url 'settings' as url %}
      %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
        %a.nav-link{href: "{% url 'settings' %}"} RÃ©glages

      - if user.student.studentcollaborator.collaborative_tool
        {% url 'request_help' as url %}
        %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
          %a.nav-link{href: "{% url 'request_help' %}"} Demander de l'aide
        {% url 'provide_help' as url %}
        %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
          %a.nav-link{href: "{% url 'provide_help' %}"} Fournir de l'aide
        {% url 'help_request_history' as url %}
        %li.nav-item{class: "{% if request.path == url %}nav-item-active{% endif %}"}
          %a.nav-link{href: "{% url 'help_request_history' %}"} Historique

  {% url 'notifications' as url %}

  {% live_notify_list %}
  {% live_notify_badge classes="nav-item-active badge" %}
  {% notifications_unread as unread_count %}
  {% if unread_count %}
    Vous avez <strong>{{ unread_count }}</strong> notifications non lues.
  {% endif %}

	
