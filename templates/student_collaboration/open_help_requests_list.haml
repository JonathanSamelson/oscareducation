-extends "base.haml"

-block content
   %table
        <thead>
            <tr>
                <th>Name</th>
                <th>Skill</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for help_request in open_help_requests %}
            <tr>
                <td>{{ help_request.student }}</td>
                <td>{{ help_request.skill }}</td>
                <td>{{ help_request.timestamp }} </td>
            </tr>
        {% endfor %}
       </tbody>